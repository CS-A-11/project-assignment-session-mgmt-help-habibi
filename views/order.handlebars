                    </div> --}}
                    <div class="form-group">
                        <label for="details">Assignment Details</label>
                        <textarea required type="text" colspan="8" class="form-control" id="assignmentDetails" placeholder="Assignment details" name="details"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="budget">Budget (USD)</label>
                        <input required type="text" class="form-control" id="budget" placeholder="Enter your budget" name="budget"></input>
                    </div>

                    <div class="form-group">
                        <label for="file">Upload a file</label>
                        <input type='file' name="file" id='file' />
                    </div>



                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

              
            </div>
        </div>
    </div>
</section>