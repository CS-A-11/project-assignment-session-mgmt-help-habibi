<section class="section-top-50 section-bottom-90">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h3>Place new Order</h3>
                <form action="/client/order" method="POST" role="form" id="newOrder" class="text-left" enctype="multipart/form-data">
                    <legend>Good Grades or Money Back</legend>
                    <!--
                  <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" autocomplete='email' id="email" placeholder="Your Email" name="email">
