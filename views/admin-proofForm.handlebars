<section class="section-top-50 section-bottom-90">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h3>Upload a new Order</h3>
                <form action="/admin/uploadwork" method="POST" role="form" id="newOrder" class="text-left" enctype="multipart/form-data">
                    <legend>Upload Work</legend>
                     
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" class="form-control" id="subject" name="subject" placeholder="Assignment subject">
                    </div>

                    <div class="form-group">
                        <label for="title">Assignment Title</label>
                        <input type="text" class="form-control" id="title" placeholder="Assignment title" name="title">
                    </div>
                    <div class="form-group">
                        <label for="details">Assignment Details</label>
                        <textarea type="text" colspan="8" class="form-control" id="assignmentDetails" placeholder="Assignment details" name="details"></textarea>
 
                    <div class="form-group">
                        <label for="file">Upload a file</label>
                        <input type='file' name="file" id='file' />
                    </div>



                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

              
            </div>
        </div>
    </div>
</section>